<UserControl x:Class="Yarsey.Desktop.WPF.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yarsey.Desktop.WPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Foreground="Bisque" FontSize="25" Content="HomeView"/>

            <Label Margin="5,5,5,5" Foreground="Red" FontSize="20" Content="{Binding BizName}"/>
            <Image Source="{Binding Image}" Height="100" Width="100"/>
            <Button Content="Open Modal" Width="100" Height="60" Command="{Binding OpenModal}"/>
        </StackPanel>
        

    </Grid>
</UserControl>
