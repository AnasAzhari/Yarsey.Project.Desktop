<UserControl x:Class="Yarsey.WPF.Layout.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yarsey.WPF.Layout"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" >
            <ToggleButton Height="30"      Content="Show Selection" Command="{Binding NavigateHomeCommand}"/>
            <ToggleButton Height="30"  Content="Show Customer" Command="{Binding NavigateCustomerCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
